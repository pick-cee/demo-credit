  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pick-cee/demo-credit/issues"
  },
  "homepage": "https://github.com/pick-cee/demo-credit#readme",
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.10.1"
  },
